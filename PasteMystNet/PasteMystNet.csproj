<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>

		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>8.0</LangVersion>

		<PackageIcon>Icon.png</PackageIcon>
		<Product>PasteMyst.NET</Product>
		<Version>1.1.4</Version>
		<Copyright>Copyright Â© 2021</Copyright>
		<Authors>Dennise Catolos</Authors>
		<Description>A simple .NET API wrapper for PasteMyst!</Description>

		<PackageProjectUrl>https://github.com/dentolos19/PasteMystNet</PackageProjectUrl>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>

		<SignAssembly>true</SignAssembly>
		<AssemblyOriginatorKeyFile>Properties\AssemblyKey.snk</AssemblyOriginatorKeyFile>
		<ApplicationIcon>Resources\Icon.ico</ApplicationIcon>

	</PropertyGroup>

	<ItemGroup>
		<None Include="..\LICENSE">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Resource Include="Resources\Assets\Icon.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</Resource>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="12.0.3"/>
	</ItemGroup>

</Project>